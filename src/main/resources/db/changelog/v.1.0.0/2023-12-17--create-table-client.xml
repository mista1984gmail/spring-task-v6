<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet logicalFilePath="2023-12-17--create-table-client"
               id="2023-12-17--create-table-client" author="s.mitskevich">
        <createTable tableName="clients">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(60)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="telephone" type="varchar(13)">
                <constraints nullable="false"/>
            </column>
            <column name="birthday" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="registration_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>